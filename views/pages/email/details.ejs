    <div class="email-details__container">
      <hr/>
      <dl class="row">
        <dt class="col-sm-3">Para</dt>
        <dd class="col-sm-9">{{ email.sentTo.map(guest => guest.fullName).join(', ') }}</dd>
      
        <dt class="col-sm-3">Asunto</dt>
        <dd class="col-sm-9">{{ email.subject }}</dd>
      </dl>

      <div class="row xs-12 mb-4 template" v-html="email.template"></div>
  
      <div class="text-right">
        <a href="/admin/email" class="btn btn-dark">Atr√°s</a>
