<div id="welcome">
  <div class="container">
    <h1>Dashboard</h1>
    <hr/>
    <ul class="nav nav-tabs">
      <li class="nav-item">
        <a class="nav-link active" id="total-tab" data-toggle="tab" href="#total" role="tab" aria-controls="total" aria-selected="true">Totals</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="confirmed-tab" data-toggle="tab" href="#confirmed" role="tab" aria-controls="confirmed" aria-selected="false">Confirmed</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="pending-tab" data-toggle="tab" href="#pending" role="tab" aria-controls="pending" aria-selected="false">Pending</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="notcoming-tab" data-toggle="tab" href="#notcoming" role="tab" aria-controls="notcoming" aria-selected="false">Not Coming</a>
      </li>
    </ul>
    <div class="tab-content">
      <div class="tab-pane fade" id="confirmed" role="tabpanel" aria-labelledby="confirmed-tab">
        <div class="card-body">
          <table class="table table-borderless">
            <thead>
              <tr>
                <th class="col-small" scope="col">#</th>
                <th scope="col">Name</th>
              </tr>
            </thead>
            <tbody>
              <tr v-for="(guestConfirmed, indexConfirmed) in confirmed">
                <th class="col-small" scope="row">{{ indexConfirmed + 1 }}</th>
                <td>{{ guestConfirmed.fullName}}</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      <div class="tab-pane fade" id="pending" role="tabpanel" aria-labelledby="pending-tab">
        <div class="card-body">
          <table class="table table-borderless">
            <thead>
              <tr>
                <th class="col-small" scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Contact to confirm</th>
              </tr>
            </thead>
            <tbody>
              <tr v-for="(guestPending, indexPending) in pending">
                <th class="col-small" scope="row">{{ indexPending + 1 }}</th>
                <td>{{ guestPending.fullName}}</td>
                <td>{{ guestPending.type === 'main' ? 'yes' : ''}}</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      <div class="tab-pane fade" id="notcoming" role="tabpanel" aria-labelledby="notcoming-tab">
        <div class="card-body">
          <table class="table table-borderless">
            <thead>
              <tr>
                <th class="col-small" scope="col">#</th>
                <th scope="col">Name</th>
              </tr>
            </thead>
            <tbody>
              <tr v-for="(guestNotComing, indexNotComing) in notComing">
                <th class="col-small" scope="row">{{ indexNotComing + 1 }}</th>
                <td>{{ guestNotComing.fullName}}</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      <div class="tab-pane fade show active" id="total" role="tabpanel" aria-labelledby="total-tab">
        <div class="card-body">
          <div class="container-fluid">
            <div class="row">
              <div class="col-xs-12 col-sm-4">
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title">Total Invited Guests</h5>
                    <p class="card-text">{{total.length}}</p>
                  </div>
                </div>
              </div>
              <div class="col-xs-12 col-sm-4 mt-4 mt-sm-0">
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title">Total Confirmed Guests</h5>
                    <p class="card-text">{{confirmed.length}}</p>
                  </div>
                </div>
              </div>
              <div class="col-xs-12 col-sm-4 mt-4 mt-sm-0">
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title">Total Pending Guests</h5>
                    <p class="card-text">{{pending.length}}</p>
                  </div>
                </div>
              </div>
            </div>
            <div class="row mt-4">
              <div class="col-xs-12 col-sm-4">
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title">Not Coming Guests</h5>
                    <p class="card-text">{{notComing.length}}</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%- /* Expose locals as `window.SAILS_LOCALS` :: */ exposeLocalsToBrowser() %>
