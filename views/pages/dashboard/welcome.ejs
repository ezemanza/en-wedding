<div id="welcome">
  <div class="container">
    <h1 class="no-print">Dashboard</h1>
    <hr class="no-print"/>
    <ul class="nav nav-tabs no-print">
      <li class="nav-item">
        <a class="nav-link active" id="total-tab" data-toggle="tab" href="#total" role="tab" aria-controls="total" aria-selected="true">Totales</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="confirmed-tab" data-toggle="tab" href="#confirmed" role="tab" aria-controls="confirmed" aria-selected="false">Confirmados</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="pending-tab" data-toggle="tab" href="#pending" role="tab" aria-controls="pending" aria-selected="false">Pendientes</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="notcoming-tab" data-toggle="tab" href="#notcoming" role="tab" aria-controls="notcoming" aria-selected="false">Rechazados</a>
      </li>
    </ul>
    <div class="tab-content">
      <div class="tab-pane fade" id="confirmed" role="tabpanel" aria-labelledby="confirmed-tab">
        <div class="card-body">
          <div class="talbe-responsive">
            <table class="table table-bordered">
              <thead>
                <tr>
                  <th class="col-small">#</th>
                  <th>Apellido y Nombre</th>
                  <th>Mesa</th>
                  <th>Menú</th>
                </tr>
              </thead>
              <tbody>
                <tr v-for="(guestConfirmed, indexConfirmed) in confirmed">
                  <th class="col-small" scope="row">{{ indexConfirmed + 1 }}</th>
                  <td>{{ guestConfirmed.lastName }} {{ guestConfirmed.firstName }}</td>
                  <td>{{ guestConfirmed.table !== '0' ? guestConfirmed.table : 'Sin Mesa' }}</td>
                  <td>{{ guestConfirmed.menu }}</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <div class="tab-pane fade no-print" id="pending" role="tabpanel" aria-labelledby="pending-tab">
        <div class="card-body">
          <div class="talbe-responsive">
            <table class="table table-borderless print">
              <thead>
                <tr>
                  <th class="col-small" scope="col">#</th>
                  <th scope="col">Nombre y Apellido</th>
                  <th scope="col">Contactar para confirmar?</th>
                </tr>
              </thead>
              <tbody>
                <tr v-for="(guestPending, indexPending) in pending">
                  <th class="col-small" scope="row">{{ indexPending + 1 }}</th>
                  <td>{{ guestPending.fullName}}</td>
                  <td>{{ guestPending.type === 'main' ? 'Si' : ''}}</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <div class="tab-pane fade no-print" id="notcoming" role="tabpanel" aria-labelledby="notcoming-tab">
        <div class="card-body">
          <div class="talbe-responsive">
            <table class="table table-borderless print">
              <thead>
                <tr>
                  <th class="col-small" scope="col">#</th>
                  <th scope="col">Nombre y Apellido</th>
                </tr>
              </thead>
              <tbody>
                <tr v-for="(guestNotComing, indexNotComing) in notComing">
                  <th class="col-small" scope="row">{{ indexNotComing + 1 }}</th>
                  <td>{{ guestNotComing.fullName }}</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <div class="tab-pane fade show active no-print" id="total" role="tabpanel" aria-labelledby="total-tab">
        <div class="card-body print">
          <div class="container-fluid">
            <div class="row">
              <div class="col-xs-12 col-sm-4">
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title">Total Invitados</h5>
                    <p class="card-text">{{ total.length }}</p>
                  </div>
                </div>
              </div>
              <div class="col-xs-12 col-sm-4 mt-4 mt-sm-0">
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title">Invitados Pendientes a confirmar</h5>
                    <p class="card-text">{{ pending.length }}</p>
                  </div>
                </div>
              </div>
            </div>
            <div class="row mt-4">
              <div class="col-xs-12 col-sm-4 mt-4 mt-sm-0">
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title">Confirmados</h5>
                    <p class="card-text">{{confirmed.length}}</p>
                  </div>
                </div>
              </div>
              <div class="col-xs-12 col-sm-4">
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title">No vienen</h5>
                    <p class="card-text">{{notComing.length}}</p>
                  </div>
                </div>
              </div>
            </div>
            <div class="row mt-4">
              <div class="col-xs-12 col-sm-4 mt-4 mt-sm-0">
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title">Adultos</h5>
                    <p class="card-text">{{ confirmed.filter(c => !c.minor).length }}</p>
                  </div>
                </div>
              </div>
              <div class="col-xs-12 col-sm-4">
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title">Menores de 5 años</h5>
                    <p class="card-text">{{ confirmed.filter(c => c.minor).length }}</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%- /* Expose locals as `window.SAILS_LOCALS` :: */ exposeLocalsToBrowser() %>
