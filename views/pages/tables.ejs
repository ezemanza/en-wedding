<div id="tables-view" v-cloak>

  <div class="container">
    <h1>Tables</h1>
    <hr/>
    <ul class="nav nav-tabs">
      <li class="nav-item">
        <a class="nav-link active" id="assigned-tab" data-toggle="tab" href="#assigned" role="tab" aria-controls="assigned" aria-selected="true">Assigned</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="unassigned-tab" data-toggle="tab" href="#unassigned" role="tab" aria-controls="unassigned" aria-selected="false">Unassigned</a>
      </li>
    </ul>
    <div class="tab-content">
      <div class="tab-pane fade show active" id="assigned" role="tabpanel" aria-labelledby="assigned-tab">
        <div class="card-body">
          <div class="container-fluid">
            <div class="row">
              <p class="text-danger mr-4">Not coming</p>
              <p class="text-warning mr-4">Pending confirmation</p>
              <p>Confirmed</p>
            </div>
            <div class="row">
              <div class="col-xs-12 col-sm-4 mb-4" v-for="(table, key) in assigned">
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title">Table {{key}}</h5>
                    <p :class="['card-text', { 'text-danger': guest.status === 'notComing', 'text-warning': guest.status === 'pending' }]" v-for="guest in table">{{guest.fullName}}</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="tab-pane fade" id="unassigned" role="tabpanel" aria-labelledby="unassigned-tab">
        <div class="card-body">
          <div class="container-fluid">
            <div class="row">
              <p class="text-danger mr-4">Not coming</p>
              <p class="text-warning mr-4">Pending confirmation</p>
              <p>Confirmed</p>
            </div>
            <div class="row">
              <table class="table">
                <thead>
                  <tr>
                    <th class="col-small" scope="col">#</th>
                    <th scope="col">Name</th>
                    <th></th>
                  </tr>
                </thead>
                <tbody>
                  <tr v-for="(guestUnassigned, indexUnassigned) in unassigned">
                    <th class="col-small" scope="row">{{ indexUnassigned + 1 }}</th>
                    <td :class="{ 'text-danger': guestUnassigned.status === 'notComing', 'text-warning': guestUnassigned.status === 'pending' }">{{ guestUnassigned.fullName}}</td>
                    <td>
                      <a :href="`/admin/guest/edit/${guestUnassigned.id}`" class="btn btn-warning btn-sm">EDIT</a>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>
<%- /* Expose server-rendered data as window.SAILS_LOCALS :: */ exposeLocalsToBrowser() %>
